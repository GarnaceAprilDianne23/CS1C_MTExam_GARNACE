// groceryList.js

let createList = prompt("Would you like to create a grocery list? (y/n):");

if (createList.toLowerCase() === "y") {
    let numItems = parseInt(prompt("How many items would you like to add to your grocery list?"));
    let groceryList = [];

    for (let i = 0; i < numItems; i++) {
        let item = prompt(`Enter item #${i + 1}:`);
        groceryList.push(item);
    }

    let groceryList_Sort = [...groceryList].sort();
    let groceryList_Reverse = [...groceryList].reverse();

    alert("Original List: " + groceryList.join(", "));
    alert("Sorted List: " + groceryList_Sort.join(", "));
    alert("Reversed List: " + groceryList_Reverse.join(", "));

    console.log("Original List:", groceryList);
    console.log("Sorted List:", groceryList_Sort);
    console.log("Reversed List:", groceryList_Reverse);
} else {
    alert("No grocery list created.");
}
